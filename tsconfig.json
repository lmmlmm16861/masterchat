{
  "exclude": ["tools", "lib", "examples"],
  "compilerOptions": {
    /* https://www.typescriptlang.org/docs/handbook/project-references.html */
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "sourceRoot": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
